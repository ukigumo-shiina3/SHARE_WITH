<!DOCTYPE html>
<html>
  <head>
    <title>SHARE WITH</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/fullcalendar/4.2.0/core/main.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/fullcalendar/4.2.0/daygrid/main.min.css">
  </head>

<body>
  <header class="navbar">
    <div class="container">
      <nav class="nav navbar-nav navbar-left">
        <%= link_to root_path do %>
          <h1>SHARE WITH</h1>
          <% end %>
      </nav>

      <nav>
        <ul class="nav navbar-nav navbar-right">
          <% if user_signed_in? %>
          <li>
            <span>
              ようこそ、<%= current_user.name %>さん！
            </span>
          <li>
              <%= link_to "Home", events_path %>
          </li>
          <li>
              <%= link_to "About", home_about_path %>
          </li>
          <li>
              <%= link_to "Howto", home_howto_path %>
          </li>
          <li>
              <%= link_to "ユーザ一覧", users_path %>
          </li>
          <li>
              <%= link_to "マイページ", user_path(current_user) %>
          </li>
          <li>
              <%= link_to "イベント投稿", new_event_path%>
          </li>
          <li>
              <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
          </li>
          <% else %>
          <li>
              <%= link_to "Home", events_path %>
          </li>
          <li>
              <%= link_to "About", home_about_path %>
          </li>
          <li>
              <%= link_to "Howto", home_howto_path %>
          </li>
          <li>
              <%= link_to "ユーザ一覧", users_path %>
          </li>
          <li>
              <%= link_to "新規登録", new_user_registration_path %>
          </li>
          <li>
              <%= link_to "ログイン", new_user_session_path %>
          </li>
          <li>
              <%= link_to "簡単ログイン", events_guest_sign_in_path, method: :post %>
          </li>
          <% end %>
        </ul>
      </nav>
    </div>
  </header>  

  <% if user_signed_in? %>
    <div class="search-form">
      <%= form_tag(search_path, method: :get) do %>
        <%= text_field_tag 'search[content]' %>
        <%= select_tag 'search[model]', options_for_select({ "User" => "user", "Event" => "event" }) %>
        <%= select_tag 'search[how]', options_for_select({ "完全一致" => "match", "前方一致" => "forward", "後方一致" => "backward", "部分一致" => "partical"  }) %>
        <%= submit_tag '検索', class: "btn btn-primary" %>
      <% end %>
    </div>
  <% end %>

  <%= yield %>


  <footer>
    <p class="copyright">CopyRight © 2020-20XX SHARE WITH CORPORATION.</p> 
  </footer>
</body>
</html>
