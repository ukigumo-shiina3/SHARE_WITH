<div class="container">
    <div class="row events" >
        <h4 class="events-index">PICK UP EVENTS</h4>
            <div class="col-md-7"> 
                <!-- イベント一覧 -->
                <% @events.each do |event| %>
                    <div class ="event-box">
                        <div class="col-md-6">
								<%= link_to event_path(event) do %>
									<%= attachment_image_tag event, :image, :fill, 150, 150, format: 'jpeg' %>
								<% end %>
								<div class="row"><a href ="/events/<%= event.id %>"><%= event.title %></a></div>
                                <div class="row"><%= event.body%></div>
                        </div>
                    </div>
                <% end %>
            </div>
            
            <!-- ランキング -->
            <div class="col-md-3">
                <div class="row ranking">
                    <h4 class="mt-5">おすすめイベント</h4>
                </div>
            <!-- カレンダー -->
                <div class="row calender">
                    <h4 class="mt-5">マイカレンダー</h4>
                </div>
            </div>
    </div>
</div>

    