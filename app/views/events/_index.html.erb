<div class="col-md-9"> 
    <% events.each do |event| %>
    
        <div class ="event-box">
            <div class="col-md-12">
                    <%= link_to event_path(event) do %>
                        <%= attachment_image_tag event, :image, :fill, 500, 400, format: 'jpeg' %>
                    <% end %>
                    <div class="row"><a href ="/events/<%= event.id %>"><%= event.title %></a></div>
                    <div class="row"><%= event.event_date %></div>
                    <p><%= event.event_hour %><%= event.event_minute %></p>
                    <div class="row"><%= event.body %></div>
                    <div class="row"><%= event.recruitment %></div>
                <div class="row">
                        <% unless current_user.nil?%>
                        <% if event.favorited_by?(current_user) %>
                            <%= link_to event_favorites_path(event), method: :delete do %>
                            <i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>
                            <%= event.favorites.count %>
                            <% end %>
                        <% else %>
                            <%= link_to event_favorites_path(event),method: :post do %>
                            <i class="fa fa-heart" aria-hidden="true"></i>
                            <%= event.favorites.count %>
                            <% end %>
                    </div>
                        <% end %>
                        <% else %>
                            <% if event.favorites.count == 0 %>
                                <i class="fa fa-heart" aria-hidden="true"></i>
                                <%= event.favorites.count %>
                            <% else %>
                                <i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>
                                <%= event.favorites.count %>
                            <% end %>
                        <% end %>
                    <p>
                        コメント数：
                            <%= event.comments.count %>
                    </p>
            </div>
        </div>
    <% end %>
</div>