
    <h3 class="event_show" >イベント詳細</h3>
        <div class="row">
            <div class="col-sm-5 event_show_left">
                <%= attachment_image_tag @event, :image, :fill, 550, 450, format: 'png' %>
            </div>
        
            
                <div class= "col-sm-6 event_show_item">
                <div class="row event_show_right">
                    <div class="row" >
                        <div class="col-xs-4">イベント名</div>
                        <div class="col-xs-6"><%= @event.title %></div>
                    </div>
                    <div class="row" >
                        <div class="col-xs-4">日程</div>
                        <div class="col-xs-6"><%= @event.event_date %></div>
                    </div>
                    <div class="row" >
                        <div class="col-xs-4">開始時間</div>
                        <div class="col-xs-6"><%= @event.open_hour %>時<%= @event.open_minute %>分</div>
                    </div>
                    <div class="row" >
                        <div class="col-xs-4">終了時間 </div>
                        <div class="col-xs-6"><%= @event.end_hour %>時<%= @event.end_minute %>分</div>
                    </div>
                    <div class="row">
                        <div class="col-xs-4">内容</div>
                        <div class="col-xs-6"><%= @event.body %></div>
                    </div>
                    <div class="row">
                        <div class="col-xs-4">募集要項</div>
                        <div class="col-xs-6"><%= @event.recruitment %></div>
                    </div>
                    <div class="row">
                        <div class="col-xs-4">ジャンル</div>
                        <div class="col-xs-6"><%= @event.genre.name %></div>
                    </div>
                </div>
            </div>
        </div>
        

        <div class="event_comment">
            <div class="event_comment_layout">
                <div id="comment_<%= @event.id %>"><br>
                    <%= render 'comments/comments', comments: @comments %>
                </div>
            </div>
            
                <%= form_for [@event, @comment] , remote: true do |f| %>
                    <%= f.text_area :comment, size: '65x7' %>
                    <div class="comment_button"><%= f.submit '送信' %></div>
                <% end %>
        </div>

        <div class="row ">
            <div class="col-lg-3 event_button">
                <%= link_to 'イベント編集', edit_event_path(@event), class: "btn btn-primary btn-lg" %>
                <%= link_to 'イベント削除', event_path(@event.id), method: :delete, "data-confirm" =>"本当に削除しますか？", class: "btn btn-danger btn-lg"%>
            </div>
        </div>
    
